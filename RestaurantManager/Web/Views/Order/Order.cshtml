@model IEnumerable<RestaurantManager.BusinessLayer.DTOs.DTOs.OrderDto>

@{
    ViewBag.Title = "Order";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<h2>Order</h2>

<p>
    @Html.ActionLink("Create New", "NewOrder")
    
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderStartTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderTable)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Id)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.OrderStartTime)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.OrderTable)
    </td>
    <td>
        @Html.ActionLink("Details", "Details", new { id = item.Id })
    </td>
</tr>
    }

</table>
