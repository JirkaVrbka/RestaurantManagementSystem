@model Web.Models.StatisticsModel

@{
    ViewBag.Title = "Statistics";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<h2>Statistics</h2>
@{
    var profitToday = (Model.RevenuesToday - Model.CostsToday).ToString();
}

<div>
    <h4>StatisticsModel</h4>
    <hr />

    <h3>Today</h3>
    <dl class="dl-horizontal">
        <dt>
            Profit
        </dt>

        <dd>
            @profitToday
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CostsToday)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CostsToday)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.RevenuesToday)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RevenuesToday)
        </dd>

    </dl>

    <img src="@Url.Action("DrawTodayChart", "Statistics")" />

    <h3>Month</h3>
    <dl class="dl-horizontal">
        <dt>
            Profit
        </dt>

        <dd>
            @(Model.RevenuesMonth - Model.CostsMonth)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CostsMonth)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CostsMonth)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.RevenuesMonth)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RevenuesMonth)
        </dd>

    </dl>

    <img src="@Url.Action("DrawMonthChart", "Statistics")" />

    <h3>Overall</h3>
    <dl class="dl-horizontal">
        <dt>
            Profit
        </dt>

        <dd>
            @(Model.RevenuesAll - Model.CostsAll)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CostsAll)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CostsAll)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.RevenuesAll)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RevenuesAll)
        </dd>

    </dl>

    <img src="@Url.Action("DrawOverallChart", "Statistics")" />


</div>
